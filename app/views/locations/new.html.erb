<div class="new-location-container">
  <div class="container">
    <div class="mb-3">
        <div class="new-form">
          <h2>Add new location</h2>
          <%= simple_form_for(@location) do |f| %>
            <%= f.error_notification %>

            <div class="form-inputs">
              <%= f.input :name %>
              <%= f.input :address %>
              <%= f.input :price %>
              <%= f.input :description %>
              <%= f.input :cover %>
              <%= f.input :cover_cache, as: :hidden %>
              <%= f.button :submit, class: "text-white btn btn-primary" %>
            </div>
          <% end %>
        </div>
    </div>
  </div>
</div>
</div>
