<div>
  <div class="card-banner" style="background-image: url('https://images.pexels.com/photos/1471203/pexels-photo-1471203.jpeg?cs=srgb&dl=city-lights-dark-dark-green-plants-1471203.jpg&fm=jpg');">
    <div class="card-ban-title"><h1>Add your locations</h1></div>
    <a href="/locations/new" class="index-btn btn btn-primary btn-lg text-right">New</a>
  </div>
</div>


<div class="container">
  <div class="row">
      <% @locations.each do |location| %>
        <div class="col-12 col-sm-12 col-md-6 col-lg-4 mb-4">
          <div class="card-wraper" style=" background-color: white;">
            <div class="card-img" style="background-image: url('<%= location.cover %>');">
              <h1 class="card-title"><h5><%= location.name %></h5></h1>
              <h6><%= location.address %></h6>
            </div>
            <div class="card-action">
              <div>
                <%= location.price %> <i class="fas fa-euro-sign"></i>
              </div>
              <div>
                <%= link_to "Book", location_path(location), class:"card-btn btn btn-outline-primary btn-sm" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
  </div>
</div>
<div
  id="map"
  style="width: 100%;
  height: 500px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
